                    <button class="btn small" value="Yes" name="ynb_1911618_yes" onclick="CS.TMD.user_review_vote(1911618, 'tt0086979', 'yes');" >Yes</button>
                    <button class="btn small" value="No" name="ynb_1911618_no" onclick="CS.TMD.user_review_vote(1911618, 'tt0086979', 'no');" >No</button>
                </div>
